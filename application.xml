 <!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"  
 "http://www.springframework.org/dtd/spring-beans.dtd">  
 <beans>  
 <bean id="extendCallTarget" class="org.mule.providers.soap.axis.wsdl.wsrf.ExtenderCall"/>  
 <bean id="wsMainAdvice" class="org.mule.providers.soap.axis.wsdl.wsrf.aspect.WsMainAdvice"/>  
 <bean id="extendCallsPointcutAdvisor"  
 class="org.springframework.aop.support.NameMatchMethodPointcutAdvisor">  
 <property name="mappedName">  
  <value>extend*</value>  
  </property>  
  <property name="advice">  
  <ref bean="wsMainAdvice"/>  
  </property>  
  </bean>  
  <bean id="extendCallProxyBean" class="org.springframework.aop.framework.ProxyFactoryBean">  
  <property name="proxyInterfaces">  
  <value>org.mule.providers.soap.axis.wsdl.wsrf.IExtendCall</value>  
  </property>  
  <property name="interceptorNames">  
  <list>  
  <value>extendCallsPointcutAdvisor</value>  
  </list>  
  </property>  
  <property name="target">  
  <ref bean="extendCallTarget"/>  
  </property>
 <property name="exposeProxy"><value>true</value></property>
  </bean>  
  </beans> 
